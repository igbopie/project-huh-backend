extends layout

block content
  div.container
    div.row
      div.col-xs-12.col-md-4.col-md-offset-4
        img(src="/images/seemlogoazul-horizontal.png")
        img.seem-item(src="https://s3-us-west-2.amazonaws.com/seem-dev-test/#{item.mediaId}_thumb")
        div.seem-item-caption
          div.username.pull-left
            i.fa.fa-user
            span &nbsp;@#{item.username}
          div.date.pull-right
            i.fa.fa-calendar
            span &nbsp;#{ item.created.toYMD( "/" )}
          div.clearfix
          p #{item.caption}

        div.seem-item-info
          i.fa.fa-star.seem-item-info-thing #{item.favouriteCount}
          i.fa.fa-thumbs-up.seem-item-info-thing #{item.thumbUpCount}
          i.fa.fa-thumbs-down.seem-item-info-thing #{item.thumbDownCount}
        br
        a.open-in-the-app(href="seem://itemId/#{item._id}")
          img(src="/images/logo-solo.png")
          span Open in the app


